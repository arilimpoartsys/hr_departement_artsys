        <record id="view_department_filter_hradv_artsys_ih1" model="ir.ui.view">
            <field name="name">hr.department.search</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_filter"/>
            <field name="arch" type="xml">
                    <xpath expr="//field[@name='manager_id']" position="before">
                    	<field name="category" />
                    	<filter string="Director" name="filter_director" domain="[('category','=','dir')]"/>
                    	<filter string="Division" name="filter_division" domain="[('category','=','div')]"/>
                    	<filter string="Department" name="filter_department" domain="[('category','=','dep')]"/>
                    	<filter string="Unit" name="filter_unit" domain="[('category','=','unit')]"/>
                    	<filter string="Sub-Unit" name="filter_subunit" domain="[('category','=','sunit')]"/>
                    </xpath>
                    <xpath expr="//filter[@name='inactive']" position="after">
	                    <group expand="0" string="Group By">
	                        <filter string="Category" name="group_category" domain="[]" context="{'group_by':'category'}"/>
	                        <filter string="Manager/Coach" name="group_manager" domain="[]" context="{'group_by':'manager_id'}"/>
	                    </group>
                    </xpath>
             </field>
        </record>
        <record id="view_department_tree_hradv_artsys_ih1" model="ir.ui.view">
            <field name="name">hr.department.tree</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='display_name']" position="after">
						<field name="category"/> 
                    </xpath>
                </data>
             </field>
        </record>
        <record id="view_department_form_hradv_artsys_ih1" model="ir.ui.view">
            <field name="name">hr.department.form</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='name']" position="after">
						<field name="category"/>
                    </xpath>
                </data>
             </field>
        </record>

